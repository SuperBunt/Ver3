<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Research &amp; Analyse your chosen area</title>
    @*BE AWARE OF THE POSITION OF EACH SCRIPT, CAN HAVE KNOCK-ON EFFECTS IF NOT IN CORRECT ORDER*@

    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/custom.css")
    @*@Styles.Render("~/Scripts/jquery-ui-1.12.1.min.js")*@

    @if (IsSectionDefined("Amcharts"))
    {
        @RenderSection("Amcharts");
    }

    @if (IsSectionDefined("School"))
    {
        @RenderSection("School");
    }

    <meta name="description" content="Home page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>*@
                @Html.ActionLink("Arealyser", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Contact", "Contact", "Home", new { @class = "navbar-brand" })
            </div>
            @*<div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>*@
        </div>
    </div>
    <div id="my-header" class="jumbotron">
        <div class="container" style="max-height: 100px">
            <h1 class="pull-left title">
                Arealyser&nbsp;&nbsp; 
            </h1>
            <a href="@Url.Action("Index", "Home", null)">
                <img class="img-responsive targetBtn" src="~/Content/icons/Optimized-glossy-green-button-md.png" style="padding-left:20px; width:80px" alt="Return to home">
            </a>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Arealyser</p>
            @*<div>Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>*@
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@

</body>

@if (IsSectionDefined("map"))
{
    @RenderSection("map");
}

@if (IsSectionDefined("education"))
{
    @RenderSection("education");
}

</html>
