@model AreaAnalyserVer3.ViewModels.Analysis

<div class="row">
    <div class="container">
        <h2 class="category-header">Summary</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.AreaName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AreaName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NumSchools)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumSchools)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NumBusinesses)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumBusinesses)
            </dd>
        </dl>
        <hr />
        <h4>Property statistics</h4>
        <p class="small">note: previous 6 months</p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NumSoldinLast6mths)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumSoldinLast6mths)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AveragePriceLast6mths)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AveragePriceLast6mths)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PercentDiff)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PercentDiff) %
            </dd>

        </dl>
    </div>
</div>
<div id="wiki" class="row">
    <div class="container">
    <hr />
    <h3>Wikipedia Info</h3>

        <div class="panel-group">
            @foreach (var item in Model.WikiResults)
            {
                <div class="panel panel-default" style="max-width: 480px;">
                    <div class="panel-heading">
                        <a href="@string.Format("https://en.wikipedia.org/wiki/{0}", @item.PageTitle)">@item.PageTitle ...</a>
                    </div>
                    <div class="panel-body">
                        <p>@item.PageContent</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>