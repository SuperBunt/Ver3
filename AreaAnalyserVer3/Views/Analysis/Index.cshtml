                <div>
                    <div id="chartdiv" style="width: 100%; height: 600px"></div>
                </div>
                <div id="pprTable"  class="container-fluid" hidden>
                    @Html.Partial("PriceRegister")
                </div>
              
            </div>             
            <!-- /End Property container -->

            <!-- Crime container -->

            <div id="Crime" class="tab-pane fade">

